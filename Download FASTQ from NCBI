Download: sratoolkit.current-ubuntu64.tar.gz


#Unzip the file 
tar -vxzf downloadfilename
#The folder will be unzipped now

#Go into the SRA folder and then into the bin folder.
cd nomedapastasracompleta/bin

#Check the SRA bin folder path
pwd

#Add the tool to the PATH: replace with the folder path that was verified in the previous step (pdw)

echo 'export PATH=$PATH:putyourpath' >> ~/.bashrc 

#Update
source ~/.bashrc

#Go back home
cd ~

#Check if the system is finding the tool
which fastq-dump

#Message returned:
/home/elisribeiro/sratoolkit.3.2.1-ubuntu64/bin/fastq-dump 

#Test if the tool is working correctly:
fastq-dump --stdout -X 2 SRR390728

#Message returned:

