#Updating
sudo apt update

#FastQC
sudo apt install fastqc

fastqc --version

#trimmomatic
sudo apt install trimmomatic

#Checking where the .jar file is located
dpkg -L trimmomatic

#Exporting the .jar file address to the PATH so it runs automatically
echo 'alias trimmomatic="java -jar /usr/share/java/trimmomatic-0.39.jar"' >> ~/.bashrc

#Restarting the terminal
source ~/.bashrc

#Test the command
trimmomatic

#HISAT2
sudo apt install hisat2

#Test the command
hisat2

#Installing samtools for sorting and conversion BAM/BAM
sudo apt install samtools

#Test the command
samtools

#featureCounts
sudo apt install subread

#Testing the command
featureCounts -h
